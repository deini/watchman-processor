{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es6" ],
    "outDir": "built/",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "built",
    "index.d.ts"
  ]
}